@import '~variables.styl'

#menu
	background blue
	height 100%
	width 320px
	z-index 10
	position absolute
	padding 40px
	padding-left 60px
	top 0
	left 0
	transform translateX(-320px)
	transition transform 450ms 0ms easeInOutBack

	&.open
		transform translateX(-20px)

	.close
		width 50px
		height 50px
		background blue
		position absolute
		right -50px
		top 0
		line-height 48px
		font-size 40px
		text-align center
		cursor pointer
		transition background-color 250ms 0ms easeInOutSine

		&:hover
			background-color saturate(blue, 20%)

	p
		margin 0
		text-transform uppercase
		font-size 18px
		color rgba(white,0.7)
		border-bottom 1px solid rgba(white,0.5)
		padding-bottom 10px
		margin-bottom 10px

	a
		transition color 250ms 0ms easeInOutSine

		&:hover
			color #CC0099
